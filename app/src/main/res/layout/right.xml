<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_sendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#bfbfbf"
        android:padding="2dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_userhead"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/tv_sendtime"
        android:src="@drawable/myhead" />

    <RelativeLayout
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sendtime"
        android:layout_toLeftOf="@+id/iv_userhead"
        android:layout_marginRight="5dp"
        >

        <TextView
            android:id="@+id/tv_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:autoLink="web"
            android:background="@drawable/chatto_bg"
            android:gravity="left|center"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225.0dip"
            android:paddingLeft="8dip"
            android:textSize="15sp"
            style="@style/chat_content_date_style"
            android:adjustViewBounds="true"
             />

        <TextView
            android:id="@+id/message_duration_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/message_media_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/message_duration_textView"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/message_location_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_userhead"
        android:layout_toRightOf="@id/message_content"
        android:gravity="center"
        android:textColor="#818181"
        android:textSize="15sp" />

</RelativeLayout>